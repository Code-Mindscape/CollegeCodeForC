#include <stdio.h>
int main(){
	
    // Program to Convert GBs to Kbs 
	  // Kbs to Mbs, Gbs and Tbs
	
	int kbsInOneMb = 1024; 
	int kbsInOneGb = 1048576;
	int kbsInOneTb = 1073741824;
	int userData;
	int kbsData;
	int tbData;
	int MBs;
	int KBs;
	float GBs;
	float TBs;
		
	printf("Enter your data in Gbs:\n");
	scanf("%d",&userData);

	printf("Enter your data in Kbs:\n");
	scanf("%d",&kbsData);
	
	KBs = userData * kbsInOneGb;
	GBs = kbsData / kbsInOneGb;
	MBs = kbsData / kbsInOneMb;
	TBs = kbsData / kbsInOneTb;
	
	printf("There are %d KBs in %d GBs\n",KBs,userData);
	printf("There are %.2f TBs, %.2f GBs and %d MBs in %d KBs\n",TBs,GBs,MBs,kbsData);
		
	return 0;
}
